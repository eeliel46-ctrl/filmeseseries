# Database
DATABASE_URL='postgresql://user:password@host:5432/database?connect_timeout=15'

# TMDB API for movie data
NEXT_PUBLIC_TMDB_API_KEY=your_tmdb_api_key_here

# NextAuth Configuration
# IMPORTANT: NEXTAUTH_SECRET is required for production
NEXTAUTH_SECRET="generate-a-secure-secret-here"

# IMPORTANT: NEXTAUTH_URL must match your production domain
# For Abacus.AI deployments, use the full URL of your app
NEXTAUTH_URL=https://your-app-name.abacusai.app
